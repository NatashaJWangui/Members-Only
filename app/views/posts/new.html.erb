<div class="container">
  <h1>Create a Secret Post</h1>
  
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :body, "Your Secret:" %>
      <%= form.text_area :body, rows: 6, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Share Secret", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Posts', posts_path, class: "btn btn-secondary" %>
</div>